package com.baekjoon.loopRun;

import java.util.Scanner;

public class SumRun {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt();
		int result = 0;
		
		for(int i = 0; i < num; i++) {
			int a = sc.nextInt();
			int b = sc.nextInt();
			result = a + b;
		}
		System.out.println(result);
		
		sc.close();

	}

}
