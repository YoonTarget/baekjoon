package com.baekjoon.run;

import java.util.Scanner;

public class YearRun {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int year = sc.nextInt();
		
		if(year % 4 == 0) {
			if(year % 100 != 0 || year % 400 == 0) {
				System.out.println(1);
			}
		}
				
		sc.close();		

	}

}
